<!DOCTYPE html>
<html ng-app="Todo">
  <head>
    <title><%= title %></title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/css/app.css' />
    <link rel='stylesheet' href='/css/animation.css' />
  </head>
  <body>
  	<div class="container" ng-controller="AppCtrl">
  		<div class="header">
	        <ul class="nav nav-pills pull-right">
				<li class="active"><a href="#">Profile</a></li>
				<li><a href="/logout">Logout</a></li>
	        </ul>
        	<h3 class="text-muted">Todos</h3>
      	</div>
      	<div class="jumbotron">
	        <h1><%= title %></h1>
	        <p class="lead">This is a todo list built using MEAN (MongoDB, ExpressJS, AngularJS and NodeJS). The ideal frameworks for a hackathon project.</p>
	        <!-- <p><a class="btn btn-lg btn-success" href="#">Sign up today</a></p> -->
	    </div>
	    <form id="form-parent" ng-submit="addToDo()">
		    <input ng-model="todoItem" class="form-control" type="text" add-todo id="todo-form" name="todoItem" size="30" placeholder="What do you want to do?" />
	    </form>
	    <p class="message">{{message}}</p>
	    <div id="todo-list">
	    	<div class="todo-item slide-in completed-{{ item.completed }}" id="{{ item._id }}" ng-repeat="item in todos" >
	    		<h3 class="clearfix"><a check-mark ng-click="updateTodo(item)" class="check btn btn-info"><span class="glyphicon glyphicon-ok"></span></a>
	    		<span random-class class="label" contenteditable="true" >{{ item.item }}</span><a class="delete btn btn-danger" ng-click="deleteTodo(item)"><span class="glyphicon glyphicon-remove"></span></a></h3>
	    	</div>
	    </div>
	    <div ng-view>
	    	
	    </div>
	</div>
	<!-- Debugging -->
	{{ todos|json }}
    <script src="js/lib/angular/angular.js"></script>
    <script src="js/app.js"></script>
    <script src="js/services.js"></script>
    <script src="js/controllers.js"></script>
    <script src="js/filters.js"></script>
    <script src="js/directives.js"></script>
  </body>
</html>